{
  "manifest_version": 3,
  "name": "Admin Dashboard",
  "version": "3.0",
  "description": "Admin Dashboard",
  "author": "HJangra1",
  "options_page": "index.html",
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "action": {
    "default_title": "Snow Admin Dashboard",
    "default_icon": {
      "16": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.service-now.com/*"],
      "js": ["inject.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["script.js"],
      "matches": ["https://*.service-now.com/*"]
    }
  ],
  "host_permissions": [
    "https://*.service-now.com/*",
    "https://jira.jnj.com/*",
    "https://jenkins.eat.jnj.com/*"
  ],
  "permissions": ["activeTab", "scripting", "tabs", "storage", "sidePanel"],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src 'self' https://raw.githubusercontent.com https://jenkins.eat.jnj.com https://jira.jnj.com/ https://jnjprod.service-now.com; style-src 'self' 'unsafe-inline'; object-src 'self'; media-src 'self'; frame-src 'self'; child-src 'self'; form-action 'self';img-src 'self' data:;"
  }
}
